    "def perevod(cor, por_v):\n",
    "    vidov = []\n",
    "    for i in cor:\n",
    "        vidov.append(np.matmul(np.append(i, 1), por_v))\n",
    "    meh = np.array(vidov)\n",
    "    meh = np.delete(meh,3, 1)\n",
    "    return meh"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 30,
