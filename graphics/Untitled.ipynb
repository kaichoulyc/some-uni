   "source": [
    "def plosk_cor(vid, r):\n",
    "    hren = []\n",
    "    for i in vid:\n",
    "        x = (r / 2) / i[2] * i[0]\n",
    "        y = (r / 2) / i[2] * i[1]\n",
    "        hren.append([x, y])\n",
    "    hren = np.array(hren)\n",
    "    return hren"
   ]
